/**
 * @fileoverview Firestore Security Rules for GreenTrader Analytics.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles, calculation modules, holdings, and transactions.
 * Users can only access their own data. Stock details and official closes are publicly readable (read-only).
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/calculationModules/{moduleId}: Stores user-specific calculation modules.
 * - /users/{userId}/holdings/{holdingId}: Stores user stock holdings.
 * - /users/{userId}/transactions/{transactionId}: Stores user transaction history.
 * - /users/{userId}/trades/{tradeId}: Stores user trade items.
 * - /stockDetails/{symbol}: Stores public stock details (read-only).
 * - /officialCloses/{closeId}: Stores official end-of-day closes (read-only).
 *
 * Denormalization for Authorization:
 * The `userId` field is included in the `CalculationModule`, `Holding`, and `Transaction` documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Users collection (owner-only access)
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Do not allow listing /users
      allow create: if isSignedIn() && request.resource.data.id == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * User calculation modules (owner-only)
     */
    match /users/{userId}/calculationModules/{moduleId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.userId == request.resource.data.userId;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * User holdings (owner-only)
     */
    match /users/{userId}/holdings/{holdingId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.userId == request.resource.data.userId;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * User transactions (owner-only)
     */
    match /users/{userId}/transactions/{transactionId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.userId == request.resource.data.userId;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * User trades (owner-only)
     */
    match /users/{userId}/trades/{tradeId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.userId == request.resource.data.userId;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * Public stock details (read-only)
     */
    match /stockDetails/{symbol} {
      allow read: if true;     // get + list
      allow create, update, delete: if false;
    }

    /**
     * Public official closes (read-only)
     * Needed for front-end EOD queries using `where("__name__", "in", [...])`.
     */
    match /officialCloses/{closeId} {
      allow read: if true;     // get + list
      allow create, update, delete: if false;
    }

    /**
     * Meta collection (read-only for auth users)
     * For debugging and system status
     */
    match /meta/{docId} {
      allow read: if request.auth != null;
    }
  }
}
